<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main">
    <children>
        <Label layoutX="50" layoutY="100" text="Training Data:" />
        <TextField fx:id="tfTrainingData" editable="false" layoutX="125.0" layoutY="100.0" />
        <Button fx:id="btnBrowseTrainingData" layoutX="300" layoutY="100" mnemonicParsing="false" text="Browse" />
        <Button fx:id="btnTrainingData" layoutX="375" layoutY="100" mnemonicParsing="false" text="Train" />

        <Label layoutX="50" layoutY="200" text="Query file:" />
        <TextField fx:id="tfQueryFile" editable="false" layoutX="125.0" layoutY="200.0" />
        <Button fx:id="btnBrowseQueryFile" layoutX="300" layoutY="200" mnemonicParsing="false" text="Browse" />
        <Label layoutX="50" layoutY="250" text="Result path:" />
        <TextField fx:id="tfResultPath" editable="false" layoutX="125.0" layoutY="250.0" />
        <Button fx:id="btnBrowseResultPath" layoutX="300" layoutY="250" mnemonicParsing="false" text="Browse" />
        <Button fx:id="btnExcuseQueryFile" layoutX="375" layoutY="200" mnemonicParsing="false" text="Excuse" />

        <Label layoutX="50" layoutY="350" text="Query:" />
        <TextField fx:id="tfQuery" layoutX="125.0" layoutY="350.0" />
        <Button fx:id="btnExcuseQuery" layoutX="300" layoutY="350" mnemonicParsing="false" text="Search" />
        <TextArea fx:id="taFoundedResults" layoutX="50" layoutY="400" prefHeight="300" prefWidth="500" editable="false" />
    </children>
</AnchorPane>
